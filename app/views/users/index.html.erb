<%# == Meta_data ============================================================ %>

<% provide(:html_head_title, "Tutti gli utenti") %>

<%# == Meta_data - end ====================================================== %>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New User', new_user_path, class: "btn btn-sm btn-success float-right" %>
<br/>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Encrypted password</th>
      <th>Role</th>
      <th>Remember created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.encrypted_password %></td>
        <td><%= user.role %></td>
        <td><%= user.remember_created_at %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' unless user == current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= sanitize pagy_bootstrap_nav(@pagy) %>
